	</setting>
	<setting id="encryption" type="string" label="32004" help="32028">
	  <level>0</level>
	  <default>keyfile-blake2</default>
	  <constraints>
	    <options>
	      <option>none</option>
	      <option>keyfile</option>
	      <option>repokey</option>
	      <option>authenticated</option>
	      <option>keyfile-blake2</option>
	      <option>repokey-blake2</option>
	      <option>authenticated-blake2</option>
	    </options>
	    <allowempty>false</allowempty>
	  </constraints>
	  <control type="list" format="string">
	    <heading>32004</heading>
	  </control>
	</setting>
	<setting id="encryption_passphrase" type="string" label="32005" help="32029">
	  <level>0</level>
	  <dependencies>
